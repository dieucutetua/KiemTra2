<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".DetailActivity1">

    <LinearLayout
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAvatar"
            android:layout_width="202dp"
            android:layout_height="225dp"
            android:padding="10dp"
            android:src="@drawable/carophi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cá rô phi"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tvinfor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xuất hiện 9 - 12 sọc đậm chạy song song từ lưng xuống bụng. Chiều dài có thể tới 0.6m và nặng khoảng 4kg, cá rô phi đực có tốc độ lớn nhanh hơn so với con cái."
                android:textSize="26dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vị trí "
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvvitri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chúng có thể sống trong môi trường nước ngọt, nước lợ và nước phèn nhẹ"
                android:textSize="26dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>